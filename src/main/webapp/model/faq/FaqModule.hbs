{{~#defineBlock "Faq"~}}
    {{~#defineElement "title"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "description"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "sections"~}}
        <div class="{{elementName}}">
            {{#each this}}
                <div class="{{elementName}}-section">{{this}}</div>
            {{/each}}
        </div>
    {{~/defineElement~}}

    <div class="{{blockName}}">
        {{element "title"}}
        {{element "description"}}
        {{element "sections"}}
    </div>
{{~/defineBlock~}}