{{~#defineBlock "PromoModule"~}}
    {{~#defineElement "title"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "media"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "date"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "description"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "cta" noWith=true~}}
        <div class="{{elementName}}"><a class="btn" href="{{ctaUrl}}">{{ctaText}}</a></div>
    {{~/defineElement~}}

    <div class="{{blockName}}">
        {{element "media"}}
        <div class="{{blockName}}-content {{type}}">
            {{element "title"}}
            {{element "date"}}
            {{element "cta"}}
        </div>
    </div>
{{~/defineBlock~}}
