{{~#defineBlock "ArticlePage" extend="model/page/creativework/CreativeWorkPage"~}}
    {{~#defineElement "lead"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "body"~}}
        <div class="{{elementName}} PageContentModule" itemprop="articleBody">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineBlockContainer~}}
        <article class="{{blockName}}" itemprop="mainEntity" itemscope itemtype="http://schema.org/Article"{{extraAttributes}}>
            {{element "meta"}}
            <div class="{{blockName}}-content">
                {{#defineBlockBody}}
                    {{element "headline"}}
                    {{element "subHeadline"}}
                    {{element "byline"}}
                    {{element "lead"}}
                    {{element "body"}}
                    {{element "tags"}}
                    {{element "author"}}
                    {{element "sharebar"}}
                    {{element "comments"}}
                {{/defineBlockBody}}
            </div>
        </article>
    {{~/defineBlockContainer~}}
{{~/defineBlock~}}
