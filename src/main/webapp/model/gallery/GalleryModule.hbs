{{~#defineBlock "GalleryModule"~}}

    {{~#defineElement "title"~}}
        <div class="{{elementName}}">{{this}}</div>
    {{~/defineElement~}}

    {{~#defineElement "slides"~}}
        <div class="{{elementName}}" role="region" aria-label="Gallery slides">
            <div class="GalleryModule-index" role="status" aria-live="polite" aria-atomic="true"></div>
            {{#each this}}{{this}}{{/each}}
            <button class="prev" type="button" aria-label="Previous slide">❮</button>
            <button class="next" type="button" aria-label="Next slide">❯</button>
        </div>
    {{~/defineElement~}}

    {{~#defineBlockContainer~}}
        {{#defineBlockBody}}
            <div class="{{blockName}}" data-bsp-gallery-module>
                {{element "title"}}
                {{element "slides"}}
            </div>
        {{/defineBlockBody}}
    {{~/defineBlockContainer~}}
{{~/defineBlock~}}